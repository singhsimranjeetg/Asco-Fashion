<section class="products section">
    <div class="container">
      <div class="row">
        <div class="col-md-2">
          <div class="widget">
            <h4 class="widget-title">Sort By</h4>
          </div>

          <div id="accordion">

            {% for link in linklists[section.settings.category].links %}

            {% if link.links != blank %}  

            <div class="card">
              <div class="card-header" id="headingOne">
                <h5>
                  <a href="" class=" {% if forloop.index != 1 %} collapsed {% endif %}" data-toggle="collapse" data-target="#collapse-{{ link.title }}" aria-expanded="true" aria-controls="collapseOne">
                   {{ link.title }}
                  </a>
                </h5>
            </div>

            <div id="collapse-{{ link.title }}" class="collapse {% if forloop.first %} show {% endif %} " aria-labelledby="headingOne" data-parent="#accordion">
              <div class="card-body">
                <ul class="list-unstyled">
                  {% for childlink in link.links %}
                  <li><a href=" {{ childlink.url }} "> {{ childlink.title }} </a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>

          {% else %}

          <div class="card">
            <div class="card-header" id="headingOne">
              <h5>
                <a href=" {{ link.url }} " class="no-icon">
                 {{ link.title }}
                </a>
              </h5>
          </div>
          </div>


            
          {% endif %}
        {% endfor %}
              
            

          </div>
        </div>

        <div class="col-md-10">
          <div class="row">

              {% for product in collection.products %}

              <div class="col-md-{{section.settings.products-grid}}">
                {% include "product-item" %}

               </div>

               {% endfor %}

          </div>
        </div>
      </div>
    </div>
  </section>

  {% schema %}
  {
    "name": "Collection Page",
    "settings": [
    {
      "type": "link_list",
      "id": "category",
      "label": "Collection Dropdown"
    },

    {
      "type": "text",
      "id": "products-grid",
      "label": "Products per row",
      "default": "4"

    }

    
    ],

    "presets": [
    {
        "category": "Collection",
        "name": "Collection Page"
    }]
  }
  {% endschema %}

